          .col-md-4.col-sm-6.col-xs-12.wow.animated.fadeInUp{"data-wow-delay" => "100ms"}
            #block_links_footer_1.footer-block
              %h4.title_block= t(".share")
              .block_content
                .fb-page{"data-adapt-container-width" => "true", "data-hide-cover" => "false", "data-href" => "https://www.facebook.com/caongua.net/",  "data-width"=>"380", "data-hide-cover"=>"false", "data-show-facepile"=>"false", "data-show-posts"=>"false"}

          .col-md-5.col-sm-6.col-xs-12.wow.animated.fadeInUp{"data-wow-delay" => "100ms"}
