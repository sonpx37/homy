    .container
      .row
        .footer-bottom-wrap.clearfix
          .col-xs-12.wow.animated.fadeInLeft{"data-wow-delay" => "150ms"}
            .copyright
              %p
                Copyright &copy; 2016 Mam non Tho Ngoc

:javascript
  var initialize, marker, myCenter;

  myCenter = new google.maps.LatLng(10.881922, 106.758589);

  marker = void 0;

  initialize = function() {
    var marker;
    var map, mapProp;
    mapProp = {
      center: myCenter,
      zoom: 17
    };
    map = new google.maps.Map(document.getElementById('googleMap'), mapProp);
    marker = new google.maps.Marker({
      position: myCenter,
      map: map,
      title: 'Trường mầm non tư thục Thỏ Ngọc'
    });
    marker.setMap(map);
  };
  google.maps.event.addDomListener(window, 'load', initialize);
