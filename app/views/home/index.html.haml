.row
  #myCarousel.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "3", "data-target" => "#myCarousel"}
    / Wrapper for slides
    .carousel-inner{:role => "listbox"}
      .item.active
        = image_tag("slide1.jpg", alt: "home image", class: "image-slilder")
      .item
        = image_tag("slide2.jpg", alt: "home image", class: "image-slilder")
      .item
        = image_tag("slide3.jpg", alt: "home image", class: "image-slilder")
      .item
        = image_tag("slide4.jpg", alt: "home image", class: "image-slilder")
    / Left and right controls
    %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
      %span.sr-only Next

  / tuyen dung hoc sinh
  = render template: 'abouts/tuyen_sinh'

  / phan tin tuc thong bao, goc chia se kinh nghiem me va be
  .news-experience.box-content
    = render 'news/form', preview: "tin_tuc", posts: @events_posts, relative_posts: @relative_event_posts, cat: SU_KIEN_CAT
    = render 'news/form', preview: "kn_phu_huynh", posts: @parent_posts, relative_posts: @relative_parent_posts, cat: PHU_HUYNH_CAT
    = render 'news/form', preview: "hoc_sinh", posts: @students_posts, relative_posts: @relative_student_posts, cat: HOC_SINH_CAT
